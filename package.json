{
  "name": "ai-creation-hackathon",
  "version": "1.0.0",
  "description": "Web platform for creating multiple independent AI chatbots",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "nodemon backend/server.js",
    "frontend:dev": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "build:render": "npm ci --only=production && cd frontend && npm ci --only=production && npm run build && cd ../containers/mainCodebase && npm ci --only=production",
    "start:render": "chmod +x render-start.sh && ./render-start.sh",
    "docker:build": "docker build -t ai-chatbot-platform .",
    "docker:run": "docker run -d --name ai-platform -p 5000:5000 -p 3000:3000 --env-file .env ai-chatbot-platform",
    "docker:compose": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "optimize:cleanup": "node scripts/cleanup-node-modules.js",
    "optimize:containers": "node scripts/optimize-containers.js",
    "optimize:all": "npm run optimize:cleanup && npm run optimize:containers",
    "containers:delete-all": "node scripts/delete-all-containers.js"
  },
  "keywords": [
    "ai",
    "chatbot",
    "containers",
    "hackathon"
  ],
  "author": "Hackathon Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
