{
  "name": "ai-creation-hackathon",
  "version": "1.0.0",
  "description": "Web platform for creating multiple independent AI chatbots",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "nodemon backend/server.js",
    "frontend:dev": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "docker:build": "docker build -t ai-chatbot-platform .",
    "docker:run": "docker run -d --name ai-platform -p 5000:5000 -p 3000:3000 --env-file .env ai-chatbot-platform",
    "docker:compose": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [
    "ai",
    "chatbot",
    "containers",
    "hackathon"
  ],
  "author": "Hackathon Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
